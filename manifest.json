{
  "name": "chrome-extension",
  "description": "chrome-extension!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [],
  "action": {
    "default_icon": {
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "128": "/images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mako.co.il/*"
      ],
      "js": [
        "utils.js",
        "mako.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}